<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/list_item_selector"
    android:padding="10dp"
    tool:background="#fff">
    <CheckBox
        android:id="@+id/download_record_delete_checkbox"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:focusable="false"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/download_record_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/download_record_delete_checkbox"
        android:layout_centerVertical="true"
        tool:src="@drawable/collect"
        tool:ignore="ContentDescription" />
    <TextView
        android:id="@+id/download_record_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/download_record_icon"
        android:ellipsize="middle"
        android:textColor="#000"
        android:textSize="19sp"
        tool:text="百度.apk"
        android:singleLine="true" />

    <TextView
        android:id="@+id/download_record_modified_date_and_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/download_record_icon"
        android:textColor="@color/text_color_deep_gray"
        android:textSize="13sp"
        tool:text="2018年10月18日 下午12：50   1022.99MB" />
</RelativeLayout>